---

import Layout from '../layouts/Layout.astro';
import FitnessPlan from '../components/FitnessPlan.tsx';
import { Image } from 'astro:assets';
import backgroundImg from '../assets/background.jpg';
---

<Layout title="Welcome to Fitness Planner">
  <div class="flex items-center justify-center min-h-scree">
    <Image src={backgroundImg} alt="Background" class="absolute inset-0 w-full h-full object-cover z-[-1]" />
    <div class="relative w-full h-full max-w-xl p-8 bg-black bg-opacity-75 rounded-lg shadow-lg">
      <h1 class="text-4xl font-bold text-white mb-4">Program</h1>
      <FitnessPlan client:load />
    </div>
  </div>
</Layout>